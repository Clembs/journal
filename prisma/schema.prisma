generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id         String       @id
  username   String
  avatarHash String?      @map("avatar")
  activities Activity[]
  logs       JournalLog[]
}

model Activity {
  id     String       @id @default(uuid())
  user   User         @relation(fields: [userId], references: [id])
  userId String
  label  String
  color  Int
  logs   JournalLog[]
}

enum Mood {
  HAPPY
  LAZY
  AVERAGE
  SAD
  BOTHERED
}

model JournalLog {
  id         String   @id
  userId     String
  user       User     @relation(fields: [userId], references: [id])
  mood       Mood
  activityId String
  activity   Activity @relation(fields: [activityId], references: [id])
}
